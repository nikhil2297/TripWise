<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_bill_icon"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/ic_help_black"
            android:background="@color/colorLightGrey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_bill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Bill 1"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/iv_bill_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_bill_icon" />

        <TextView
            android:id="@+id/tv_bill_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="$700"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bill_icon"
            app:layout_constraintStart_toEndOf="@+id/iv_bill_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_bill_name" />

        <com.google.android.material.chip.ChipGroup
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_bill_icon"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/iv_bill_icon"
            style="@style/Widget.MaterialComponents.Chip.Entry"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>